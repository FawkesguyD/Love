# Copy this file to .env and fill with local development values.
# Do not commit real secrets.

# MinIO bootstrap
MINIO_ROOT_USER=local_minio_root
MINIO_ROOT_PASSWORD=local_minio_root_password
S3_ENDPOINT=http://s3:9000
S3_ACCESS_KEY=local_s3_access_key
S3_SECRET_KEY=local_s3_secret_key
S3_BUCKET=images
S3_REGION=us-east-1
S3_USE_SSL=false
S3_FORCE_PATH_STYLE=true

# Mongo bootstrap
MONGO_INITDB_ROOT_USERNAME=local_mongo_root
MONGO_INITDB_ROOT_PASSWORD=local_mongo_root_password

# App connection DSN
MONGO_URI=mongodb://local_mongo_root:local_mongo_root_password@mongo:27017/?authSource=admin
MONGO_DB_NAME=app

# Mongo Express UI auth
MONGO_EXPRESS_USERNAME=local_mongo_express
MONGO_EXPRESS_PASSWORD=local_mongo_express_password
